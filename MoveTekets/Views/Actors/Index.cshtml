@using WebApplication1.Models
@model IEnumerable<Actor>
@{
    ViewData["Title"] = "Actors List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">🎬 Actors List</h2>
        @* Add Buton *@
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Add New Actor
        </a>
    </div>

    <div class="table-responsive shadow rounded bg-white p-3">
        <table class="table table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Profile Picture</th>
                    <th>Full Name</th>
                    <th>Biography</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var actor in Model)
                {
                    <tr>
                        <td>
                            <img src="@actor.ProfilePicture" alt="@actor.FullName"
                                 class="rounded-circle shadow-sm border"
                                 style="width:100px; height:100px; object-fit:cover;" />
                        </td>

                        <td class="fw-semibold">
                            @actor.FullName
                        </td>

                        <td class="text-muted" style="max-width: 300px;">
                            @actor.Bio
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@actor.id"
                               class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <a asp-action="Details" asp-route-id="@actor.id"
                               class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-eye"></i> Details
                            </a>

                            <a asp-action="Delete" asp-route-id="@actor.id"
                               class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

                  