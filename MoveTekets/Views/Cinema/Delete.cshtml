@model WebApplication1.Models.Cinema


@{
    ViewData["Title"] = "Delete Cinema";
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        /* ===== Page Background ===== */
        body {
            background: linear-gradient(180deg, #0b0b0c 0%, #0f1113 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            color: #fff;
        }

        /* ===== Modal Card ===== */
        .delete-modal {
            background: rgba(10, 10, 10, 0.9);
            border-radius: 16px;
            box-shadow: 0 0 35px rgba(0, 191, 255, 0.4);
            padding: 35px;
            width: 420px;
            text-align: center;
            border: 1px solid #ffbf00;
            animation: fadeIn 0.4s ease-in-out;
        }

            .delete-modal h3 {
                color: #ffbf00;
                font-weight: 700;
                margin-bottom: 10px;
            }

            .delete-modal p {
                color: #ccc;
            }

        /* ===== Cinema Image ===== */
        img {
            border-radius: 50%;
            margin-bottom: 12px;
            width: 100px;
            height: 100px;
            object-fit: cover;
            border: 2px solid #ffbf00;
        }

        /* ===== Buttons ===== */
        .btn-delete {
            background: linear-gradient(90deg, #ff0066 0%, #ff7a18 100%);
            color: white;
            border: none;
            width: 100%;
            padding: 10px;
            font-weight: 600;
            border-radius: 8px;
            margin-bottom: 10px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .btn-delete:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 18px rgba(255, 0, 102, 0.3);
            }

        .btn-cancel {
            background-color: #ffbf00;
            color: #000;
            border: none;
            width: 100%;
            padding: 10px;
            font-weight: 600;
            border-radius: 8px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .btn-cancel:hover {
                background-color: #ffd633;
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(255, 191, 0, 0.5);
            }

        /* ===== Animation ===== */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }
    </style>
</head>
<body>
    <div class="delete-modal">
        <h3><i class="bi bi-exclamation-triangle-fill text-warning"></i> Delete Confirmation</h3>
        <p>Are you sure you want to delete this Cinema?</p>
        <hr class="border-warning" />

        <h5 class="fw-bold">@Model.Name</h5>
        <img src="@Model.Logo" alt="@Model.Name" />
        <p class="text-secondary small">@Model.Description</p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="id" />
            <button type="submit" class="btn btn-delete">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-cancel">Cancel</a>
        </form>
    </div>
</body>
</html>
