@using WebApplication1.Models
@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "Cinemas List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">🎬 Cinemas List</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Cinema
        </a>
    </div>

    <div class="table-responsive shadow rounded bg-white p-3">
        <table class="table table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Logo</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr>
                        <td>
                            <img src="@cinema.Logo" alt="@cinema.Name"
                                 class="rounded shadow-sm border"
                                 style="width:120px; height:80px; object-fit:cover;" />
                        </td>

                        <td class="fw-semibold">
                            @cinema.Name
                        </td>

                        <td class="text-muted" style="max-width: 300px;">
                            @cinema.Description
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@cinema.id"
                               class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <a asp-action="Details" asp-route-id="@cinema.id"
                               class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-eye"></i> Details
                            </a>

                            <a asp-action="Delete" asp-route-id="@cinema.id"
                               class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
