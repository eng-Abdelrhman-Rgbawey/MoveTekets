@{
    ViewData["Title"] = "Not Found";
    Layout = "_Layout"; 
}

<div class="container text-center py-5">
    <div class="card bg-dark text-light shadow-lg p-5 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <i class="bi bi-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
            <h1 class="mt-4">404 - Not Found</h1>
            <p class="lead mt-3">
                Sorry, the page or item you’re looking for doesn’t exist or has been removed.
            </p>
            <hr class="border-light my-4" />
            <a asp-action="Index" asp-controller="Movies" class="btn btn-outline-light btn-lg mt-3">
                <i class="bi bi-house-door"></i> Back to Home
            </a>
        </div>
    </div>
</div>
